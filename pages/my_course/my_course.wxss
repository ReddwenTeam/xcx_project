@import "../../common/wxss/common";

.pd-lr2 { padding-left: 20rpx; padding-right: 20rpx; }
.schedule-box { padding: 0 20rpx; height: 72rpx; margin: 21rpx auto 10rpx; border-radius: 20rpx; background-color: #efefef; text-align: center; }
.one-day { width: 50%; height: 60rpx; border-radius: 60rpx; color: #2b3579; }
.one-day.on { background-color: #2b3579; color: #ffffff; }
.video-content{position: relative;}
.one-video { position: relative; height: 350rpx; }
.one-video video{width: 100%;height: 100%; }
.pop-box { width: 100%; height: 350rpx; position: relative;top: 0; left: 0; z-index: 99; overflow: hidden }
.pop-box::before{content: "";position: absolute;top: 0;left: 0;width: 100%;height: 100%;background-color: #000;opacity: .2;z-index: 7;}
.img-poster{ width: 100%;position: absolute;top: 0;left: 0;z-index: 6}
.pop-info { position: relative; width: 100%; height: 170rpx; z-index: 10; }
.pop-info .play-btn{width: 80rpx;height: 80rpx;margin-bottom: 30rpx;}
.pop-info .play-btn image{width: 100%;height: 100%;}
.info-time { opacity: 0.5; margin-top: 10rpx; }
.one-class { background-color: #ffffff; margin-top: 17rpx; padding: 15rpx 10rpx; box-shadow: 2rpx 2rpx 5rpx rgba(0, 0, 0, .2) }
.img-msg { width: 255rpx; height: 144rpx; margin-right: 20rpx; }
.mg-t1 { margin-top: 10rpx; }
.poster-title{ max-width: 60%;}
.poster-title text{ display: table-cell ;text-align: center; word-break: break-all;}
.mainVideo{ position: absolute; width: 100%; top:0;left: 0;visibility: hidden;}
.mainVideo.active{visibility: visible;}

.class-box{margin-bottom: 20rpx;}