<!--游客-->
<template name="youke">
  <image class="slider-content" mode="scaleToFill" src="image/tourist_bg.jpg"></image>
  <view class="info-content box box-ac">
      <view class="info-box color-0 fs-26">身份：游客</view>
      <view class="box box-f1 box-ver box-ac box-pe pos-head">
          <image class="img-head" mode="scaleToFill" src="https://xcx.51zhenkun.com/addons/star_school/data/static/icon.jpg"></image>
          <p class="fs-34 color-0 fs-bold head-name">{{nickName}}</p>
      </view>
      <view class="info-box color-0 fs-26" bindtap='ToUserBind'>去绑定</view>
  </view>
  <view class="one-msg box box-ac">
      <image class="img-msg" mode="scaleToFill" src="image/tourist_msg.png"></image>
      <view class="box box-f1 color-7 fs-28">我在读的在线课程</view>
      <view class="icon-right box-img"></view>
  </view>
</template>

<!--家长-->
<template name="jiazhang">
  <image class="slider-content" mode="scaleToFill" src="image/tourist_bg.jpg"></image>
  <view class="info-content box box-ac">
      <view class="info-box color-0 fs-26">身份：家长</view>
      <view class="box box-f1 box-ver box-ac box-pe pos-head">
          <image class="img-head" mode="scaleToFill" src="{{avatarUrl}}"></image>
          <p class="fs-34 color-0 fs-bold head-name">{{nickName}}</p>
      </view>
      <view class="info-box color-0 fs-26">学生切换</view>
  </view>
  <view class="bg-blue box">
      <view class="width-5 box box-ac box-pc">
        <text class="fs-26 color-9 mg-r2">服务</text>
        <text class="fs-26 color-w">已绑定</text>
        <text class="fs-26 color-y box box-f1 box-pe" bindtap='deleteBinding'>解除</text>
      </view>
      <!-- <view class="width-5 box box-ac box-pc">
          <text class="fs-26 color-w">班级：五年级一班</text>
      </view> -->
      <!-- <view class="width-5 box box-ac box-pc">
          <text class="fs-26 color-w">学生：李颖儿</text>
      </view> -->
  </view>
  <view class="box box-ac box-pc">
      <view class="width-4 box box-ac" bindtap='ToNoticeList'>
          <view class="pd-l2 box box-ver box-f1">
              <view class="fs-32 color-g">校园通知</view>
              <view class="fs-22 color-9 mg-t05">实时关注孩子</view>
          </view>
          <image class="img-ptab" mode="scaleToFill" src="image/teacher_2.png"></image>
      </view>
      <view class="width-4 box box-ac" bindtap='ToWorkList' data-work-type="2">
          <view class="pd-l2 box box-ver box-f1">
              <view class="fs-32 color-r">作业列表</view>
              <view class="fs-22 color-9 mg-t05">家园共育</view>
          </view>
          <image class="img-ptab" mode="scaleToFill" src="image/teacher_3.png"></image>
      </view>
  </view>
  <view class="box box-ac box-ac box-pc">
      <view class="width-4 box box-ac">
          <view class="pd-l2 box box-ver box-f1">
              <view class="fs-32 color-lg">班级课程</view>
              <view class="fs-22 color-9 mg-t05">关注学生成长</view>
          </view>
          <image class="img-ptab" mode="scaleToFill" src="image/teacher_5.png"></image>
      </view>
      <view class="width-4-hide"></view>
  </view>
  <view class="one-msg box box-ac mg-t35">
      <image class="img-info" mode="scaleToFill" src="image/parent_msg.png"></image>
      <view class="box box-f1 color-7 fs-28">学生基本信息</view>
      <view class="icon-right box-img"></view>
  </view>
  <view class="one-msg box box-ac mg-t15">
      <image class="img-msg" mode="scaleToFill" src="image/tourist_msg.png"></image>
      <view class="box box-f1 color-7 fs-28">我在读的在线课程</view>
      <view class="icon-right box-img"></view>
  </view>
</template>

