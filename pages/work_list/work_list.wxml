<view wx:key="{{item.index}}" wx:for="{{Works_list}}">
    <view class="one-info box box-ac" data-work-id="{{item.id}}">
        <view class="class-math box-img" style='background-image: url(image/zuoye.png)'></view>
        <view>
            <p class="fs-32 color-0">{{item.title}}</p>
            <view class="fs-20 color-9 box box-ac info-detail">
              <view>{{item.info}}</view>
              <view>{{item.formateTime}}</view>
              <!-- <view class="icon-new box-img" style='background-image: url(image/icon_new.png)'></view> -->
            </view>
        </view>
    </view>
</view>
<view class='box box-pc box-ac' style='padding: 20rpx 0;' wx:if="{{loading.status}}">
  <image class="loading-img" mode="scaleToFill" src="../../common/image/loading.png" wx:if="{{loading.load}}"></image>
  <view class='fs-26 color-9'>{{loading.text}}</view>
</view>